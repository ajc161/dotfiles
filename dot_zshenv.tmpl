typeset -U path
path=("$HOME/.local/bin" "/usr/local/bin" "/usr/local/sbin" $path)

# common exports
export EDITOR=nvim
export PAGER=less
export MANPAGER="sh -c 'col -bx | bat -l man -p'"

# gnupg
unset SSH_AGENT_PID
if [ "${gnupg_SSH_AUTH_SOCK_by:-0}" -ne $$ ]; then
  export SSH_AUTH_SOCK="$(gpgconf --list-dirs agent-ssh-socket)"
fi

# software versions
export RUSTUP_HOME="$HOME/.rustup"
export CARGO_HOME="$HOME/.cargo"
export JENV_ROOT="$HOME/.jenv"
export PYENV_ROOT="$HOME/.pyenv"

[[ -x $(whence cargo) ]] && path=("$CARGO_HOME/bin" $path)
[[ -x $(whence jenv) ]] && path=("$JENV_ROOT/bin" $path)
[[ -x $(whence pyenv) ]] && path=("$PYENV_ROOT/bin" $path)

# nix
if [ -e "$HOME/.nix-profile/etc/profile.d/nix.sh" ]; then
  source "$HOME/.nix-profile/etc/profile.d/nix.sh"
fi
{{- if contains "maxar" .chezmoi.fqdnHostname }}

export JDTLS_HOME="$HOME/.local/share/jdtls"
export WORKSPACE="$HOME/Projects"
{{- end }}
