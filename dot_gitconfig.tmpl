[user]
    name = Adam Cook
    email = {{ .email }}
{{- if index . "signingkey" }}
    signingkey = {{ .signingkey }}
{{- end }}

[commit]
{{- if index . "signingkey" }}
    gpgsign = true
{{- end }}

[init]
    defaultBranch = main

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    light = false
    line-numbers = true
    navigate = true
    syntax-theme = base16-256

[merge]
    conflictstyle = diff3
    tool = nvimdiff

[diff]
    colorMoved = default

[status]
    submoduleSummary = true

[push]
    autoSetupRemote = true

[pull]
    rebase = true
    ff = only

[credential "https://github.com"]
    helper = 
    helper = !gh auth git-credential

[credential "https://gist.github.com"]
    helper = 
    helper = !gh auth git-credential
