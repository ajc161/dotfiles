[user]
	name = Adam Cook
	email = {{ .email }}
{{- if index . "signingkey" }}
	signingkey = {{ .signingkey }}
{{- end }}

[init]
	defaultBranch = main

[pager]
	diff = delta
	log = delta
	reflog = delta
	show = delta

[interactive]
	diffFilter = delta --color-only --features=interactive

[delta]
	features = decorations
	syntax-theme = base16-256
	line-numbers = true
	#side-by-side = true
	navigate = true

[commit]
{{- if index . "signingkey" }}
	gpgsign = true
{{- end }}

[status]
	submoduleSummary = true

[pull]
	rebase = true
	ff = only

[diff]
	colorMoved = default

[difftool "vimdiff"]
	path = nvim

[mergetool "vimdiff"]
	path = nvim
